{
  "rrsets": [
    {
{% if item.type == "SRV" %}
      "name": "{{ item.name }}.{{ item.zone }}",
{% endif %}
{% if item.type != "SRV" %}
      "name": "{{ item.name }}.{{ item.zone }}",
{% endif %}
      "type": "{{ item.type }}",
      "changetype": "{{ item.changetype }}",
      "records": [
        {
          "content": "{{ item.content }}",
          "disabled": {{ item.disabled|lower }},
{% if item.type == "SRV" %}
          "name": "{{ item.name }}.{{ item.zone }}",
{% endif %}
{% if item.type != "SRV" %}
          "name": "{{ item.name }}.{{ item.zone }}",
{% endif %}
          "ttl": {{ item.ttl }},
          "type": "{{ item.type }}",
{% if item.type == "A" or item.type == "AAAA" %}
          "set-ptr": true,
{% endif %}
          "priority": {{ item.priority }}
        }
      ]
    }
  ]
}
